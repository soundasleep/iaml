end

/**
 * @inference SyncWire,ECARule,SimpleCondition,ParameterEdge 
 *		{@model ECARule ECARules} with incoming {@model SimpleCondition conditions} 
 *		with {@model Parameter parameters} will be copied to elements 
 *		created by {@model SyncWire SyncWires}.
 */
rule "Connect ParameterEdges to SimpleConditions connected to ECARules created by SyncWires (edit/update) (onChange)"
	when
		# we have a syncwire
		sw : SyncWire( )
		source : Changeable( )
		target : ContainsOperations( )
		eval(functions.connects(sw, source, target))  
		
		# that has created a ECARule
		event : Event( source.onChange == event )
		operation : Operation( eContainer == target, name=="update" )
		run : ECARule( eContainer == sw, from == event, to == operation, name == "run" )

		# and this SyncWire has a condition
		condition : Function ( )
		sourceCw : SimpleCondition( from == condition, to == sw )
		
		# and the ECARule has the same condition 
		targetCw : SimpleCondition (from == condition, to == run ) 
		
		# and the SyncWire had a parameter
		param : ParameterEdgesSource ( )
		paramWire : Parameter( from == param, to == sourceCw )

		# but this wire does not have it
		not (Parameter (from == param, to == targetCw ))
			
		eval ( handler.veto( sourceCw ))
		
	then
		Parameter pw = handler.generatedParameter( sourceCw, sw, param, targetCw );
		//cw.setName("copied parameter: " + paramWire.getName());
		handler.setName(pw, "[conditions] sync from: " + paramWire.getId() + " param=" + ((GeneratedElement) param).getId() + " run=" + run.getId() );
		queue.add(pw, drools);

end

