		sw : SetWire(overridden == false)
		source : CanBeSynced( )
		target : CanBeSynced( )
		eval(functions.connectsSet(sw, source, target))
	
		event : EventTrigger( eContainer == source, name=="edit" )
		operation : Operation( eContainer == target, name=="update" )
