«DEFINE bounds(int lowerBound, int upperBound) FOR emf::EObject»
	«IF upperBound != 0 || lowerBound != 1»
  		«IF lowerBound == 1 && upperBound == 1»
  			«REM»ignore 1..1«ENDREM»
  		«ELSEIF upperBound == lowerBound»
  			«lowerBound»
  		«ELSEIF upperBound == -1»
  			[«lowerBound»..*]
  		«ELSE»
  			[«lowerBound»..«upperBound»]
  		«ENDIF»
  	«ENDIF»
«ENDDEFINE»

